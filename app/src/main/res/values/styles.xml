<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Shared EditText style used across dialogs and forms -->
    <style name="Widget.App.EditText" parent="@style/Widget.AppCompat.EditText">
        <!-- Force a white background for text inputs in dialogs and forms -->
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/edit_text_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/edit_text_padding_horizontal</item>
    <item name="android:textColor">@color/dark_charcoal_text</item>
    <item name="android:textColorHint">@color/medium_gray</item>
        <!-- Ensure no tint is applied so the background stays pure white -->
        <item name="android:tint">@null</item>
        <item name="tint">@null</item>
    </style>

    <!-- Shared MaterialButton style for primary actions -->
    <style name="Widget.App.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/dark_charcoal_text</item>
        <item name="android:backgroundTint">@color/light_gray_background</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <!-- Filled primary button (accent) -->
    <style name="Widget.App.MaterialButton.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accent_orange</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- Outlined secondary button -->
    <!-- Use Button parent and apply stroke attributes to emulate an outlined button (OutlinedButton resource may be unavailable) -->
    <style name="Widget.App.MaterialButton.Outlined" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/accent_orange</item>
        <item name="strokeColor">@color/accent_orange</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>
