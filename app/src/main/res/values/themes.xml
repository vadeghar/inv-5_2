<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Navy Blue + Green Enterprise -->
    <style name="Theme.INV5" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color - Navy Blue -->
        <item name="colorPrimary">@color/primary_navy_blue</item>
        <item name="colorPrimaryVariant">@color/secondary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color - Blue -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/primary_navy_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Accent color - Green -->
        <item name="colorTertiary">@color/accent_green</item>
        <item name="colorOnTertiary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_navy_blue</item>
        
        <!-- Background & Surface -->
        <item name="android:windowBackground">@color/background_white</item>
        <item name="colorSurface">@color/surface_light_gray</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- TextInputLayout customization for light mode -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="boxStrokeColor">@color/medium_gray</item>
        <item name="hintTextColor">@color/text_secondary</item>
        
        <!-- Text colors -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Apply shared EditText style globally -->
        <item name="android:editTextStyle">@style/Widget.App.EditText</item>
        
        <!-- Toolbar title color -->
        <item name="titleTextColor">@color/white</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        
        <!-- Widget style overrides -->
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="materialButtonStyle">@style/Widget.App.MaterialButton.Filled</item>
        <item name="materialOutlinedButtonStyle">@style/Widget.App.MaterialButton.Outlined</item>
        
        <!-- Error color -->
        <item name="colorError">@color/status_out_of_stock</item>
    </style>

    <style name="Theme.INV5.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.INV5.AppBarOverlay" parent="ThemeOverlay.Material3.Dark">
        <item name="colorPrimary">@color/primary_navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.INV5.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <!-- App text appearances -->
    <style name="TextAppearance.App.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- RadioButton widget style to force label color -->
    <style name="Widget.App.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>