<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Mode theme - Navy Blue + Green Enterprise -->
    <style name="Theme.INV5" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color - Darkened Navy -->
        <item name="colorPrimary">@color/primary_navy_blue</item>
        <item name="colorPrimaryVariant">@color/secondary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color - Blue -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/primary_navy_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Accent color - Green -->
        <item name="colorTertiary">@color/accent_green</item>
        <item name="colorOnTertiary">@color/dark_background</item>
        
        <!-- Status bar color - Dark -->
        <item name="android:statusBarColor">@color/dark_background</item>
        
        <!-- Background & Surface (Dark Mode) -->
        <item name="android:windowBackground">@color/background_white</item>
        <item name="colorSurface">@color/surface_light_gray</item>
        <item name="colorSurfaceVariant">@color/dark_surface_elevated</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Text colors (Dark Mode) -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Divider color -->
        <item name="colorOutline">@color/dark_divider</item>
        
        <!-- Apply shared EditText style globally -->
        <item name="android:editTextStyle">@style/Widget.App.EditText</item>
        
        <!-- Toolbar title color -->
        <item name="titleTextColor">@color/text_primary</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        
        <!-- Widget style overrides -->
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="materialButtonStyle">@style/Widget.App.MaterialButton.Filled</item>
        <item name="materialOutlinedButtonStyle">@style/Widget.App.MaterialButton.Outlined</item>
        
        <!-- Error color -->
        <item name="colorError">@color/dark_status_danger</item>
    </style>
</resources>
