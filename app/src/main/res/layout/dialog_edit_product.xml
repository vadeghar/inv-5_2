<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_gray_background">

    <TextView
        android:id="@+id/dialogTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Product"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_charcoal_text"
        android:paddingBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ID (Readonly) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.App.EditText"
                    android:id="@+id/idEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID"
                    android:enabled="false"
                    android:imeOptions="actionNone"
                    android:inputType="none"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Product Name (Editable) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.App.EditText"
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Barcode (Readonly) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/barcodeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.App.EditText"
                    android:id="@+id/barcodeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Barcode"
                    android:enabled="false"
                    android:imeOptions="actionNone"
                    android:inputType="none"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Category (Editable) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/categoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.App.EditText"
                    android:id="@+id/categoryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Category"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- MRP (Readonly) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mrpLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.App.EditText"
                    android:id="@+id/mrpEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="MRP"
                    android:enabled="false"
                    android:imeOptions="actionNone"
                    android:inputType="none"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Sale Price (Readonly) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/salePriceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.App.EditText"
                    android:id="@+id/salePriceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sale Price"
                    android:enabled="false"
                    android:imeOptions="actionNone"
                    android:inputType="none"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Quantity On Hand (Readonly) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/quantityOnHandLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.App.EditText"
                    android:id="@+id/quantityOnHandEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quantity On Hand"
                    android:enabled="false"
                    android:imeOptions="actionNone"
                    android:inputType="none"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Reorder Point (Editable) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reorderPointLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.App.EditText"
                    android:id="@+id/reorderPointEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Reorder Point"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Maximum Stock Level (Editable) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/maximumStockLevelLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.App.EditText"
                    android:id="@+id/maximumStockLevelEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Maximum Stock Level"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Is Active (Editable - Switch) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Is Active"
                    android:textSize="16sp"
                    android:textColor="@color/dark_charcoal_text" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/isActiveSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

            </LinearLayout>

            <!-- Added Date (Readonly) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addedDtLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.App.EditText"
                    android:id="@+id/addedDtEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Added Date"
                    android:enabled="false"
                    android:imeOptions="actionNone"
                    android:inputType="none"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Updated Date (Readonly) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/updatedDtLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.App.EditText"
                    android:id="@+id/updatedDtEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Updated Date"
                    android:enabled="false"
                    android:imeOptions="actionNone"
                    android:inputType="none"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Dialog Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.MaterialButton.Outlined"
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.MaterialButton.Filled"
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />

    </LinearLayout>

</LinearLayout>
